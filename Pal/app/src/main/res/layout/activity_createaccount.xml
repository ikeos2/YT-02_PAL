<?xml version="1.0" encoding="utf-8"?>
<!-- Author: Nathan Cool -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:context="edu.iastate.pal.CreateAccountActivity">

    <android.support.v7.widget.Toolbar
        android:background="@color/colorPrimary"
        android:elevation="@dimen/activity_actionBar_elevation"
        android:id="@+id/activity_createAccount_actionBar"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <ScrollView
        android:background="@color/colorGenericWhite"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <LinearLayout
            android:baselineAligned="false"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_horizontal_margin">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:contentDescription="@string/s_global_imageView_appIcon_accessibilityDescription"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/activity_createAccount_imageView_appIcon_height"
                    android:layout_width="@dimen/activity_createAccount_imageView_appIcon_width"
                    android:src="@mipmap/ic_launcher"/>

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:fontFamily="sans-serif"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:paddingEnd="@dimen/activity_login_editText_padding"
                        android:paddingStart="@dimen/activity_login_editText_padding"
                        android:text="@string/s_activity_createAccount_textView_title"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="@dimen/activity_createAccount_textView_title_textSize"/>

                    <TextView
                        android:fontFamily="san-serif"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:paddingEnd="@dimen/activity_login_editText_padding"
                        android:paddingStart="@dimen/activity_login_editText_padding"
                        android:text="@string/s_activity_createAccount_textView_subTitle"
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="@dimen/activity_createAccount_textView_subTitle_textSize"/>

                    </LinearLayout>

            </LinearLayout>

            <View
                android:layout_height="@dimen/activity_divider_height"
                android:layout_width="match_parent"/>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/s_activity_createAccount_textView_spinnerOptionsPrompt"
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="20sp"/>

                <View
                    android:layout_height="wrap_content"
                    android:layout_width="16dp"/>

                <Spinner
                    android:id="@+id/activity_createAccount_spinner_userType"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textAlignment="center"/>

            </LinearLayout>

            <View
                android:layout_height="@dimen/activity_divider_height"
                android:layout_width="match_parent"/>

            <android.support.design.widget.TextInputLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <android.support.design.widget.TextInputEditText
                    android:fontFamily="sans-serif"
                    android:hint="@string/s_generic_word_username"
                    android:id="@+id/activity_createAccount_editText_newUsername"
                    android:inputType="text"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:maxLines="1"
                    android:paddingEnd="@dimen/activity_createAccount_editText_padding"
                    android:paddingStart="@dimen/activity_createAccount_editText_padding"
                    android:textColor="@color/colorTextPrimary"
                    android:textColorHint="@color/colorAccent"
                    android:textSize="@dimen/activity_createAccount_editText_textSize"/>

            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_height="@dimen/activity_divider_height"
                android:layout_width="match_parent"/>

            <android.support.design.widget.TextInputLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <android.support.design.widget.TextInputEditText
                    android:fontFamily="sans-serif"
                    android:hint="@string/s_generic_word_password"
                    android:id="@+id/activity_createAccount_editText_newPassword"
                    android:inputType="textPassword"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:maxLines="1"
                    android:paddingEnd="@dimen/activity_createAccount_editText_padding"
                    android:paddingStart="@dimen/activity_createAccount_editText_padding"
                    android:textColor="@color/colorTextPrimary"
                    android:textColorHint="@color/colorAccent"
                    android:textSize="@dimen/activity_createAccount_editText_textSize" />

            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_height="@dimen/activity_divider_height"
                android:layout_width="match_parent"/>

            <android.support.design.widget.TextInputLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <android.support.design.widget.TextInputEditText
                    android:fontFamily="sans-serif"
                    android:hint="@string/s_generic_word_email"
                    android:id="@+id/activity_createAccount_editText_newEmail"
                    android:inputType="textEmailAddress"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:maxLines="1"
                    android:paddingEnd="@dimen/activity_createAccount_editText_padding"
                    android:paddingStart="@dimen/activity_createAccount_editText_padding"
                    android:textColor="@color/colorTextPrimary"
                    android:textColorHint="@color/colorAccent"
                    android:textSize="@dimen/activity_createAccount_editText_textSize" />

            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_height="@dimen/activity_divider_height"
                android:layout_width="match_parent"/>

            <Button
                android:background="@drawable/shape_round_button_accent"
                android:fontFamily="sans-serif"
                android:id="@+id/activity_createAccount_button_createUserAccount"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@string/s_activity_createAccount_button_createUserAccount"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/activity_createAccount_button_textSize"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
